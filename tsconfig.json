{
  "compilerOptions": {
    "experimentalDecorators": true,
    "outDir": "./dist/",
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "lib": ["es2015", "es2016", "es2017", "dom", "es6", "esnext"],
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "skipLibCheck": true,
    // "resolveJsonModule": true,
    "typeRoots": ["node_modules/@types", "src/@types"],
    "baseUrl": "./src",

    "paths": {
      "store/*": ["components/ui/*"]
    }
  }
}
